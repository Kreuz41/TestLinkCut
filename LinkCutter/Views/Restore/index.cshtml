@model string

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cutter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbs5mQxZWqudI6pbT5CPUG9iY3dFmybuPzBhpE9uHQCKBf6DIKt6r2NbpR" crossorigin="anonymous">
</head>
<body>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/Restore/RestoreLink" method="post" class="container mt-5">
                <div class="mb-3">
                    <label for="linkToCut" class="form-label">Enter Link to Cut:</label>
                    <input type="text" class="form-control" id="linkToCut" name="linkToRestore" required>
                </div>
                <div class="">
                    <button type="submit" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Cut</button>
                    <label class="ms-0">@ViewData["FullLink"]</label>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</body>
</html>
